
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Clients ---
    match /clients/{clientId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /clients {
      allow list: if request.auth != null;
    }

    // --- Agents ---
    match /agents/{agentId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow owners to update everything.
      // Allow the public API to update *only* the analytics field.
      allow update: if (request.auth != null && resource.data.userId == request.auth.uid) ||
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['analytics']));
                      
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // This single 'read' rule covers both 'get' (single doc) and 'list' (query results).
      // It allows access if the user is the owner OR if the agent is public.
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) ||
                     (resource.data.isPubliclyShared == true);
    }

    match /agents {
      // This allows the public showcase to query the collection.
      // The `read` rule on each document above provides the actual security.
      allow list: if true;
    }

    // --- Conversations ---
    match /conversations/{conversationId} {
      // Allow public creation and updates for chat widgets.
      allow create, update: if true;
      
      // Allow the public API to read a conversation to maintain context.
      // Also allows the agent's owner to read them for analytics.
      allow read: if true;
    }
    
    // Allow authenticated users to list conversations for the analytics page.
    match /conversations {
      allow list: if request.auth != null;
    }

    // --- OutboundQueue ---
    match /outboundQueue/{taskId} {
      allow create: if request.auth != null;
    }

    // --- RoadmapFeatures ---
    match /roadmapFeatures/{featureDocId} {
      allow read: if true;
      allow update: if request.auth != null &&
                       request.resource.data.currentVotes == resource.data.currentVotes + 1 &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['currentVotes']);
    }

    // --- UserVotes ---
    match /userVotes/{voteId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.featureId != null &&
                       voteId == request.resource.data.userId + '_' + request.resource.data.featureId;
    }
  }
}
